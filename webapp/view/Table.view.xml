<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.Table"
    xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    heignt="100%">
    <t:Table
        id="uiTable"
        rows="{view>/}"
        selectionMode="MultiToggle"
        visibleRowCount="10"
        paste="onPaste">
        <t:extension>
            <OverflowToolbar>
                <Title text="상품 입력" level="H2" />
                <ToolbarSpacer />
                <Button id="button1" text="추가" press=".onPressAddRow" />
                <Button id="button2" text="초기화" press=".onPressInit" />
                <Button id="button3" text="출력" press=".onPressPrint" />
            </OverflowToolbar>
        </t:extension>
        <t:columns>
            <t:Column width="25%" hAlign="Center">
                <Label text="상품명" />
                <t:template>
                    <Input 
                        id="input1"
                        value="{view>productName}"
                        showValueHelp="false">
                    </Input>
                </t:template>
            </t:Column>
            <t:Column width="25%" hAlign="Center">
                <Label text="일자"/>
                <t:template>
                    <DatePicker
                        id="input2"
                        value="{
                            path: 'view>date',
                            type: 'sap.ui.model.type.Date'
                        }"
                        placeholder="YYYY년MM월DD일" />
                </t:template>
            </t:Column>
            <t:Column width="12%" hAlign="Center">
                <Label text="카테고리" />
                <t:template>
                    <Select 
                        id="input3"
                        selectedKey="{view>category}"
                        items="{
                            path: 'category>/categories',
                            templateShareable: false
                        }">
                        <core:Item text="{category>type}" key="{category>key}" />
                    </Select>
                </t:template>
            </t:Column>
            <t:Column width="19%" hAlign="Center">
                <Label text="수량" />
                <t:template>
                    <Input 
                        id="input4"
                        value="{view>count}"
                        showValueHelp="false">
                    </Input>
                </t:template>
            </t:Column>
            <t:Column width="19%" hAlign="Center">
                <Label text="가격" />
                <t:template>
                    <Input 
                        id="input5"
                        value="{view>price}"
                        showValueHelp="false">
                    </Input>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>

    <Table 
        id="mtable"
        inset="false"
        items="{
            path: 'view>/table'
        }">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="상품 내역" level="H2"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="auto" hAlign="Center">
                <Text text="상품명" />
            </Column>
            <Column width="auto" hAlign="End">
                <Text text="카테고리" />
            </Column>
            <Column width="auto" hAlign="End">
                <Text text="일자" />
            </Column>
            <Column width="auto" hAlign="Center">
                <Text text="수량" />
            </Column>
            <Column width="auto" hAlign="Center">
                <Text text="가격" />
            </Column>
            <Column width="auto" hAlign="Center">
                <Text text="총 가격" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{view>productName}" />
                    <Text text="{view>date}" />
                    <Text text="{view>category}" />
                    <Text text="{view>count}" />
                    <Text text="{view>price}" />
                    <Text text="" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>